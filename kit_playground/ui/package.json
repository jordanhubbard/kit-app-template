{
  "name": "kit-playground",
  "version": "1.0.0",
  "description": "Visual Development Environment for NVIDIA Omniverse Kit SDK",
  "main": "../electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "react-scripts build",
    "prebuild:electron": "npm run copy-electron-files",
    "build:electron": "npm run build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cross-env BROWSER=none react-scripts start",
    "dev:electron": "wait-on http://localhost:3000 && nodemon --exec electron .",
    "copy-electron-files": "mkdir -p electron backend && cp -r ../electron/* electron/ && cp -r ../backend/* backend/",
    "predist": "npm run copy-electron-files",
    "dist": "npm run build && electron-builder --linux --publish=never",
    "build:native": "python3 ../cross_platform_builder.py"
  },
  "build": {
    "appId": "com.nvidia.kit-playground",
    "productName": "Kit Playground",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "backend/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../tools",
        "to": "tools"
      },
      {
        "from": "../../templates",
        "to": "templates"
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "backend/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "icon": "assets/icons/icon.png"
    }
  },
  "keywords": [
    "omniverse",
    "kit",
    "playground",
    "visual-programming",
    "development"
  ],
  "author": "NVIDIA Omniverse",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^38.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.38.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.44.0",
    "@mui/icons-material": "^5.13.0",
    "@mui/material": "^5.13.0",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.8.2",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.0",
    "react-scripts": "5.0.1",
    "react-split-pane": "^0.1.92",
    "socket.io-client": "^4.6.0",
    "uuid": "^9.0.0",
    "web-vitals": "^3.3.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
